        <Label x:Name="lblAanWachtwoord" Content="Wachtwoord:" HorizontalAlignment="Left" Margin="236,353,0,0" VerticalAlignment="Top" Width="91" Height="30"/>
        <TextBox x:Name="tbAanWachtwoord" HorizontalAlignment="Left" Height="30" Margin="327,353,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" />
        <Label x:Name="lblAanRekNrSparen" Content="Rekening nummer spaarrekening:" HorizontalAlignment="Left" Margin="132,388,0,0" VerticalAlignment="Top" Width="195" Height="30"/>
