        <TextBox x:Name="tbAanMaxCrediet" HorizontalAlignment="Left" Height="30" Margin="327,563,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="229" />
        <Button Content="Klant aanmaken" HorizontalAlignment="Left" Margin="588,563,0,0" VerticalAlignment="Top" Width="124" Height="30" Click="Button_Click"/>

    </Grid>
</Window>
